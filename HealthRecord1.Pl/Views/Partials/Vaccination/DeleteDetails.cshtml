@model HealthRecord1.BLL.Models.VaccinationVM

<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex align-items-center p-3 bg-light rounded-3">
                    <div class="vaccine-avatar me-3">
                        <i class="fas fa-syringe"></i>
                    </div>
                    <div>
                        <h4 class="mb-1">@Model.VaccineName</h4>
                        <span class="badge bg-info">#@Model.Id</span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success me-1">
                                <i class="fas fa-check-circle me-1"></i> نشط
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary me-1">
                                <i class="fas fa-times-circle me-1"></i> غير نشط
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-12">
                <h5 class="text-primary border-bottom pb-2 mb-3">
                    <i class="fas fa-info-circle me-2"></i>
                    معلومات التطعيم
                </h5>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-hashtag"></i>
                    </div>
                    <div class="info-content">
                        <small class="text-muted">المعرف</small>
                        <p class="mb-0 fw-bold">#@Model.Id</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <div class="info-icon bg-info">
                        <i class="fas fa-syringe"></i>
                    </div>
                    <div class="info-content">
                        <small class="text-muted">اسم التطعيم</small>
                        <p class="mb-0 fw-bold">@Model.VaccineName</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <div class="info-icon bg-secondary">
                        <i class="fas fa-industry"></i>
                    </div>
                    <div class="info-content">
                        <small class="text-muted">الشركة المصنعة</small>
                        <p class="mb-0 fw-bold">@(Model.Manufacturer ?? "غير محدد")</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-item">
                    <div class="info-icon bg-primary">
                        <i class="fas fa-pills"></i>
                    </div>
                    <div class="info-content">
                        <small class="text-muted">عدد الجرعات</small>
                        <p class="mb-0 fw-bold">@Model.StandardDoseCount جرعة</p>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="col-12 mt-4">
                    <div class="alert alert-light border-start border-info border-4">
                        <h6 class="alert-heading">
                            <i class="fas fa-file-alt text-info me-2"></i>
                            الوصف
                        </h6>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
