@model HealthRecord1.BLL.Models.VaccinationVM

<div class="row g-4">
    <div class="col-12">
        <h5 class="border-bottom pb-2 mb-3">
            <i class="fas fa-syringe text-primary me-2"></i>
            معلومات التطعيم
        </h5>
    </div>

    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="VaccineName" class="form-control" id="vaccineName" placeholder="اسم التطعيم" required />
            <label for="vaccineName">
                <i class="fas fa-syringe text-primary me-1"></i> اسم التطعيم
            </label>
            <span asp-validation-for="VaccineName" class="text-danger small"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="Manufacturer" class="form-control" id="manufacturer" placeholder="الشركة المصنعة" />
            <label for="manufacturer">
                <i class="fas fa-industry text-secondary me-1"></i> الشركة المصنعة
            </label>
            <span asp-validation-for="Manufacturer" class="text-danger small"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-floating mb-3">
            <input asp-for="StandardDoseCount" type="number" class="form-control" id="doseCount" 
                   placeholder="عدد الجرعات" required min="1" />
            <label for="doseCount">
                <i class="fas fa-pills text-info me-1"></i> عدد الجرعات القياسية
            </label>
            <span asp-validation-for="StandardDoseCount" class="text-danger small"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-check form-switch mt-4">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" id="isActive" 
                   style="width: 3em; height: 1.5em;" />
            <label for="isActive" class="form-check-label ms-2" style="font-size: 1.1em;">
                <i class="fas fa-toggle-on text-success me-1"></i>
                <strong>نشط</strong>
            </label>
        </div>
    </div>

    <div class="col-12">
        <div class="form-floating mb-3">
            <textarea asp-for="Description" class="form-control" id="description" 
                      placeholder="الوصف" style="height: 120px"></textarea>
            <label for="description">
                <i class="fas fa-file-alt text-secondary me-1"></i> وصف التطعيم
            </label>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>
    </div>
</div>
