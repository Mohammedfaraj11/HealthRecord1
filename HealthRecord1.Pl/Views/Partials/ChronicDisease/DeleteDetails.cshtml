@model HealthRecord1.BLL.Models.ChronicDiseaseVM

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>اسم المرض:</strong> @Model.Name</p>
        <p class="card-text"><strong>الوصف:</strong> @Model.Description</p>
        <p class="card-text"><strong>الملاحظات:</strong> @Model.Notes</p>
        <p class="card-text"><strong>مستوى الخطورة:</strong> @Model.SeverityScale / 10</p>
        <p class="card-text"><strong>الحالة:</strong> @(Model.IsActive ? "نشط" : "غير نشط")</p>
        <p class="card-text"><strong>رمز ICD-10:</strong> @Model.ICD10Code</p>
    </div>
</div>
