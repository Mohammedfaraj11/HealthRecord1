@{
    ViewData["Title"] = "تواصل معنا";
}

<!-- Contact Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="hero-content">
                    <div class="hero-badge mb-3">
                        <span class="badge bg-primary-light text-primary px-3 py-2">
                            <i class="fas fa-envelope me-2"></i>نحن هنا لمساعدتك
                        </span>
                    </div>
                    <h1 class="hero-title mb-4">
                        <span class="text-primary">تواصل معنا</span>
                    </h1>
                    <p class="hero-subtitle mb-4">
                        نسعد بتواصلك معنا. فريقنا جاهز للإجابة على استفساراتك ومساعدتك في أي وقت.
                    </p>

                    <!-- Contact Information -->
                    <div class="hero-features mb-4">
                        <div class="feature-list">
                            <div class="feature-item d-flex align-items-center mb-3">
                                <div class="feature-icon-small me-3">
                                    <i class="fas fa-envelope text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">البريد الإلكتروني</h6>
                                    <a href="mailto:support@healthtrack.ly" class="text-primary">support@healthtrack.ly</a>
                                </div>
                            </div>
                            <div class="feature-item d-flex align-items-center mb-3">
                                <div class="feature-icon-small me-3">
                                    <i class="fas fa-phone text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">رقم الهاتف</h6>
                                    <a href="tel:+218912345678" class="text-primary" dir="ltr">+218 91 234 5678</a>
                                </div>
                            </div>
                            <div class="feature-item d-flex align-items-center">
                                <div class="feature-icon-small me-3">
                                    <i class="fas fa-clock text-warning"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">ساعات العمل</h6>
                                    <span class="small">متاحون على مدار الساعة 24/7</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-container">
                    <div class="hero-background-circle"></div>
                    <div class="hero-character">
                        <img src="~/Images/Char.png" alt="تواصل معنا" class="character-image">
                    </div>
                    <div class="floating-elements">
                        <div class="floating-card card-1">
                            <i class="fas fa-headset text-primary"></i>
                            <span class="small">دعم فني</span>
                        </div>
                        <div class="floating-card card-2">
                            <i class="fas fa-comments text-success"></i>
                            <span class="small">استشارات</span>
                        </div>
                        <div class="floating-card card-3">
                            <i class="fas fa-question-circle text-warning"></i>
                            <span class="small">استفسارات</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="feature-card">
                    <div class="text-center mb-4">
                        <h2 class="section-title mb-3">أرسل لنا رسالة</h2>
                        <p class="section-subtitle">املأ النموذج أدناه وسنتواصل معك في أقرب وقت</p>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-controller="Home" asp-action="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label fw-bold">
                                    <i class="fas fa-user text-primary me-2"></i>الاسم الكامل
                                </label>
                                <input type="text" class="form-control" id="name" name="name" required placeholder="أدخل اسمك الكامل">
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label fw-bold">
                                    <i class="fas fa-envelope text-primary me-2"></i>البريد الإلكتروني
                                </label>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="example@email.com">
                            </div>
                            <div class="col-12">
                                <label for="subject" class="form-label fw-bold">
                                    <i class="fas fa-tag text-primary me-2"></i>الموضوع
                                </label>
                                <input type="text" class="form-control" id="subject" name="subject" required placeholder="موضوع الرسالة">
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label fw-bold">
                                    <i class="fas fa-comment-dots text-primary me-2"></i>الرسالة
                                </label>
                                <textarea class="form-control" id="message" name="message" rows="6" required placeholder="اكتب رسالتك هنا..."></textarea>
                            </div>
                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-paper-plane me-2"></i>إرسال الرسالة
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Additional Info Section -->
<section class="testimonials-section py-5">
    <div class="container">
        <div class="row text-center mb-4">
            <div class="col-12">
                <h2 class="section-title mb-3">طرق أخرى للتواصل</h2>
            </div>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100 text-center">
                    <div class="feature-icon mx-auto">
                        <i class="fas fa-question-circle"></i>
                    </div>
                    <h5 class="feature-title">الأسئلة الشائعة</h5>
                    <p class="feature-description">تصفح قسم الأسئلة الشائعة للحصول على إجابات سريعة</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100 text-center">
                    <div class="feature-icon mx-auto">
                        <i class="fas fa-book"></i>
                    </div>
                    <h5 class="feature-title">مركز المساعدة</h5>
                    <p class="feature-description">اطلع على الأدلة والشروحات التفصيلية</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100 text-center">
                    <div class="feature-icon mx-auto">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h5 class="feature-title">الدردشة المباشرة</h5>
                    <p class="feature-description">تحدث مع فريق الدعم مباشرة عبر الدردشة</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .feature-icon-small {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
        flex-shrink: 0;
    }

    .form-control {
        border-radius: 10px;
        border: 2px solid #e2e8f0;
        padding: 12px 16px;
        font-family: 'Cairo', sans-serif;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(37, 99, 235, 0.15);
    }

    .form-label {
        color: var(--dark-color);
        margin-bottom: 8px;
        font-family: 'Cairo', sans-serif;
    }

    .alert {
        border-radius: 10px;
        font-family: 'Cairo', sans-serif;
        direction: rtl;
        text-align: right;
    }

    .btn-close {
        margin-left: 0;
        margin-right: auto;
    }
</style>
