@model IEnumerable<HealthRecord1.BLL.Models.ChronicDiseaseVM>

@{
    ViewBag.Title = "الأمراض المزمنة";
}

<h2>إدارة الأمراض المزمنة</h2>
<p>@TempData["SuccessMessage"]</p>
<p>@TempData["ErrorMessage"]</p>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافة مرض مزمن جديد</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>الوصف</th>
            <th>مستوى الخطورة</th>
            <th>الحالة</th>
            <th>رمز ICD-10</th>
            <th>العمليات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.SeverityScale</td>
                <td>@(item.IsActive ? "نشط" : "غير نشط")</td>
                <td>@item.ICD10Code</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a> |
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
